@model OrderViewModel

@{
    ViewBag.Title = "Create Order";
}

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Create Order</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var product in Model.Products)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@Url.Content("~/images/" + product?.ImageUrl)"
                         class="card-img-top object-fit-cover"
                         style="height: 200px;"
                         alt="@product.Description" />

                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-muted">₹@product.Price.ToString("F2")</p>

                        <form asp-action="AddItem" method="post" class="mt-3">
                            <input type="hidden" name="prodId" value="@product.ProductId" />

                            <div class="input-group mb-2">
                                <input type="number" name="prodQty" min="1" class="form-control" placeholder="Quantity" required />
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-cart-plus"></i> Add
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
